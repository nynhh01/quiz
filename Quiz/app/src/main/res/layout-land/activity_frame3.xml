<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#f7f2fa"
    android:weightSum="100"
    tools:context=".Frame3">

    <TextView
        android:id="@+id/F3txtQuestion"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center_horizontal"
        android:text="Khảo sát mạch tạo dao động đa hài đợi trong sơ đồ A8-3. " />

    <RadioGroup
        android:id="@+id/F3rdiGroup"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:weightSum="100"
        >

        <RadioButton
            android:id="@+id/F3rdi1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25"
            android:text="RadioButton" />

        <RadioButton
            android:id="@+id/F3rdi2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25"
            android:text="RadioButton" />

        <RadioButton
            android:id="@+id/F3rdi3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25"
            android:text="RadioButton" />

        <RadioButton
            android:id="@+id/F3rdi4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25"
            android:text="RadioButton" />

    </RadioGroup>

    <Button
        android:id="@+id/F3btnCheck"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:layout_gravity="center"
        android:text="Trả lời" />

</LinearLayout>